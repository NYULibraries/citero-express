root = require('../lib/citero')
Citero = root.Citero
chai = require 'chai'
expect = chai.expect
CSF = require('./helpers/csf').CSF

describe "Citero map method", ->
  it "should create a Citero object", ->
    expect(Citero.map("")).to.be.instanceof(Citero)
describe "Citero toFormats method", ->
  it "should give array of possible destination formats", ->
    expect(Citero.toFormats()).to.be.a("Array").that.has.length(7)
      .and.include("OPENURL")
        .and.include("RIS")
          .and.include("REFWORKS_TAGGED")
            .and.include("BIBTEX")
              .and.include("EASYBIB")
                .and.include("CSL")
                  .and.include("CSF")
describe "Citero fromFormats method", ->
  it "should give array of possible source formats", ->
    expect(Citero.fromFormats()).to.be.a("Array").that.has.length(7)
      .and.include("OPENURL")
        .and.include("RIS")
          .and.include("REFWORKS_TAGGED")
            .and.include("BIBTEX")
              .and.include("PNX")
                .and.include("XERXES_XML")
                  .and.include("CSF")
